        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".ReadOnActivity" />
        <activity android:name=".YourChallengeActivity" />
        <activity android:name=".DiscoverActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".UpdateChallengeActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDUzJEMMr8kpWnfQ8Yfj2Y3xVbQ9Es9laA" />

        <activity android:name=".UpdateCurrentBookActivity"></activity>
